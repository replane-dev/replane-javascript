{
  "name": "@replanejs/next",
  "version": "1.0.2",
  "description": "Next.js SDK for Replane - feature flags and remote configuration with SSR support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "prebuild": "node ../../scripts/update-version.js .",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "test": "echo 'No tests yet'",
    "test:watch": "echo 'No tests yet'",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "replane",
    "next",
    "nextjs",
    "feature-flags",
    "remote-config",
    "configuration",
    "sdk",
    "ssr",
    "app-router",
    "pages-router"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/replane-dev/replane-javascript",
    "directory": "packages/next"
  },
  "bugs": {
    "url": "https://github.com/replane-dev/replane-javascript/issues"
  },
  "homepage": "https://github.com/replane-dev/replane-javascript#readme",
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0"
  },
  "dependencies": {
    "@replanejs/react": "workspace:^",
    "@replanejs/sdk": "workspace:^"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "next": "^15.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tsdown": "^0.18.4",
    "typescript": "^5.4.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
